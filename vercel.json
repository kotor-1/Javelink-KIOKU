{
  "version": 2,
  "public": true,
  "builds": [],
  "routes": [
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
    // 将来WebAssemblyマルチスレッドを使うときに有効化:
    // ,{
    //   "source": "/(.*)",
    //   "headers": [
    //     { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" },
    //     { "key": "Cross-Origin-Embedder-Policy", "value": "require-corp" }
    //   ]
    // }
  ]
}
